<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/album_item"
    android:background="?android:attr/selectableItemBackground"
    android:padding="12dp">

    <View
        android:id="@+id/score_badge_visitor"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"/>

    <TextView
        android:id="@+id/score_visitor"
        android:layout_width="56dp"
        android:layout_height="56dp"
        tools:text="8"
        style="@style/HeaderText"
        android:layout_alignStart="@id/score_badge_visitor"
        android:layout_alignTop="@id/score_badge_visitor"
        android:textAlignment="center"
        android:gravity="center"/>

    <View
        android:id="@+id/score_badge_home"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="60dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/score_home"
        android:layout_width="56dp"
        android:layout_height="56dp"
        tools:text="22"
        style="@style/HeaderText"
        android:layout_alignStart="@id/score_badge_home"
        android:layout_alignTop="@id/score_badge_home"
        android:textAlignment="center"
        android:gravity="center"/>

</RelativeLayout>